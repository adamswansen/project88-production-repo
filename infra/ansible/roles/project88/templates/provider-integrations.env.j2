# Provider Integrations Service Configuration - {{ environment }}
# Project88Hub Provider Integration System

# Environment
ENVIRONMENT={{ environment }}
DEBUG={{ 'true' if environment == 'dev' else 'false' }}

# Database Configuration
DB_HOST={{ postgres_host | default('localhost') }}
DB_PORT={{ postgres_port }}
DB_NAME={{ postgres_db }}
DB_USER={{ postgres_user }}
DB_PASSWORD={{ postgres_password }}
DB_SSL_MODE=require

# Redis Configuration (Session Management)
REDIS_HOST={{ redis_host | default('localhost') }}
REDIS_PORT={{ redis_port }}
REDIS_DB=0
REDIS_PASSWORD={{ vault_redis_password | default('') }}

# Provider API Configurations
# RunSignUp
RUNSIGNUP_API_KEY={{ vault_runsignup_api_key }}
RUNSIGNUP_API_SECRET={{ vault_runsignup_api_secret }}
RUNSIGNUP_API_ENDPOINT=https://runsignup.com/Rest/

# Race Roster
RACEROSTER_API_KEY={{ vault_raceroster_api_key }}
RACEROSTER_API_ENDPOINT=https://www.raceroster.com/api/

# Haku
HAKU_API_KEY={{ vault_haku_api_key }}
HAKU_API_ENDPOINT=https://api.haku.co/

# Let's Do This
LETSDOTHIS_API_KEY={{ vault_letsdothis_api_key }}
LETSDOTHIS_API_ENDPOINT=https://api.letsdothis.com/

# Service Configuration
SERVICE_PORT=8000
WORKER_COUNT={{ 3 if environment == 'prod' else 1 }}
SYNC_INTERVAL_MINUTES=15
MAX_RETRIES=3

# Logging
LOG_LEVEL={{ 'DEBUG' if environment == 'dev' else 'INFO' }}
LOG_FILE=/var/log/project88/provider_integration.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Monitoring
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics
ENABLE_METRICS={{ 'true' if environment == 'prod' else 'false' }}

# Security
JWT_SECRET_KEY={{ vault_jwt_secret_key }}
API_RATE_LIMIT=1000
CORS_ORIGINS={{ cors_origins | default('*') }}

# Timing Partner Isolation
DEFAULT_TIMING_PARTNER_ID=1
ENFORCE_TENANT_ISOLATION=true